model RoleMenu {
  roleId String @map("role_id") @db.Uuid
  role   Role   @relation(fields: [roleId], references: [id], onDelete: Cascade, onUpdate: NoAction)

  menuId String @map("menu_id") @db.Uuid
  menu   Menu   @relation(fields: [menuId], references: [id], onDelete: Cascade, onUpdate: NoAction)

  @@id([roleId, menuId])
  @@map("role_menu")
  @@schema("permission")
}
