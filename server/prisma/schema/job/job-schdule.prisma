model JobSchedule {
  id          String  @id @default(dbgenerated("uuid_generate_v4()")) @db.Uuid
  cron        String  @db.VarChar(255)
  jobName     String  @map("job_name") @db.VarChar(255)
  param       Json?   @db.JsonB
  isActive    Boolean @default(true) @map("is_active")
  description String? @db.VarChar(255)
  priority    Int     @default(0) @db.Integer // 任務優先級，數字越大優先級越高
  timeout     Int     @default(300000) @map("timeout_ms") @db.Integer // 任務超時時間，預設5分鐘 (毫秒)
  maxRetries  Int     @default(3) @map("max_retries") @db.Integer // 最大重試次數

  createdAt DateTime @default(now()) @map("created_at") @db.Timestamptz()
  updatedAt DateTime @default(now()) @updatedAt @map("updated_at") @db.Timestamptz()

  @@map("job_schedule")
  @@schema("job")
}
