{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceRoot}",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "start"],
      "console": "integratedTerminal",
      "serverReadyAction": {
        "pattern": "ready in ([0-9]+) ms",
        "killOnServerStop": true,
        "action": "debugWith${input:browser}"
      }
    }
  ],
  "inputs": [
    {
      "id": "browser",
      "type": "pickString",
      "description": "選擇要使用的瀏覽器",
      "options": ["Edge", "Chrome"],
      "default": "Edge"
    }
  ]
}
